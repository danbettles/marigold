<?xml version="1.0"?>
<ruleset name="Marigold Coding Standard">
    <config name="ignore_warnings_on_exit" value="1"/>

    <file>src/</file>
    <file>tests/</file>

    <!-- Ignore fixtures. -->
    <exclude-pattern>\/FileInfoTest\/.*?$</exclude-pattern>
    <exclude-pattern>\/TemplateFileTest\/.*?$</exclude-pattern>
    <exclude-pattern>\/TemplateEngineTest\/.*?$</exclude-pattern>

    <arg name="extensions" value="php"/>
    <arg value="p"/>
    <arg name="colors"/>

    <rule ref="PSR12">
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <rule ref="./vendor/danbettles/codesniffer-standard/src/DanBettles">
    </rule>
</ruleset>
